{
  "manifest_version": 3,
  "name": "Torri Image Translator Clone",
  "version": "1.0.0",
  "description": "Translate text in images automatically using AI - No login required",

  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "tabs",
    "scripting",
    "webRequest"
  ],

  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],

  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"],
      "css": ["css/content.css"],
      "run_at": "document_end"
    }
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Your Image Translator",
    "default_icon": {
      "16": "images/16.png",
      "32": "images/32.png",
      "48": "images/48.png",
      "128": "images/128.png"
    }
  },

  "icons": {
    "16": "images/16.png",
    "32": "images/32.png",
    "48": "images/48.png",
    "128": "images/128.png"
  },

  "commands": {
    "torii_contextmenu": {
      "suggested_key": {
        "default": "Alt+Shift+D"
      },
      "description": "Open Torii Context Menu"
    },
    "torii_translate": {
      "suggested_key": {
        "default": "Alt+Shift+Z"
      },
      "description": "Translate Image"
    },
    "torii_screenshot": {
      "suggested_key": {
        "default": "Alt+Shift+C"
      },
      "description": "Screenshot Image"
    },
    "torii_screencrop": {
      "suggested_key": {
        "default": "Alt+Shift+X"
      },
      "description": "Screen Crop Image"
    }
  },

  "web_accessible_resources": [
    {
      "resources": [
        "fonts/*.ttf",
        "fonts/*.otf",
        "images/*.png",
        "images/*.svg",
        "html/edit.html"
      ],
      "matches": ["<all_urls>"]
    }
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; img-src 'self' data: blob:;"
  }
}